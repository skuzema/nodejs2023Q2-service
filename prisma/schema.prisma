datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid()) @unique
  login     String
  password  String
  version   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Artist {
  id     String  @id @default(uuid()) @unique
  name   String
  grammy Boolean
  albums Album[]
  tracks Track[]
}

model Album {
  id       String   @id @default(uuid()) @unique
  name     String
  year     Int
  artistId String?
  artist   Artist?  @relation(fields: [artistId], references: [id])
  tracks   Track[]
}

model Track {
  id       String   @id @default(uuid()) @unique
  name     String
  artistId String?
  albumId  String?
  duration Int
  artist   Artist?  @relation(fields: [artistId], references: [id])
  album    Album?   @relation(fields: [albumId], references: [id])
}

model Favorites {
  id        String @id @default(uuid()) @unique
  type      String
  objectId  String
}
